<!DOCTYPE html>
<html>
<head>
    <title>Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="container mt-5">
    <div class="d-flex justify-content-between mb-3">
        <h2>Sistem Inventory - Gudang</h2>
        <div>
            <span>Hello, <b><%= user.username %> (<%= user.role %>)</b></span>
            <a href="/auth/logout" class="btn btn-sm btn-outline-danger ms-2">Logout</a>
        </div>
    </div>

    <% if (user.role === 'manager') { %>
        <a href="/add" class="btn btn-success mb-3">+ Tambah Barang</a>
    <% } %>

    <table class="table table-bordered">
        <thead class="table-dark">
            <tr>
                <th>Item</th>
                <th>Kategori</th>
                <th>Stok</th>
                <th>Lokasi Rak</th>
                <th>Terakhir Diubah</th>
                <th>Aksi</th>
            </tr>
        </thead>
        <tbody>
            <% items.forEach(item => { %>
                <tr class="<%= item.stock_qty <= item.min_stock ? 'table-warning' : '' %>">
                    <td><%= item.item_name %></td>
                    <td><%= item.category %></td>
                    <td><%= item.stock_qty %> <small class="text-muted">(Min: <%= item.min_stock %>)</small></td>
                    <td><%= item.storage_location %></td>
                    <td><small><%= item.updated_by || 'System' %></small></td>
                    <td>
                        <a href="/edit/<%= item.id %>" class="btn btn-sm btn-info text-white">Edit</a>
                        <% if (user.role === 'manager') { %>
                            <form action="/delete/<%= item.id %>" method="POST" style="display:inline;">
                                <button class="btn btn-sm btn-danger" onclick="return confirm('Hapus?')">Hapus</button>
                            </form>
                        <% } %>
                    </td>
                </tr>
            <% }) %>
        </tbody>
    </table>
</body>
</html>